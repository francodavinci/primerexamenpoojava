package ejerciciosprimerparcial;

public class ejercicio2 {
   public static void main(String[] args) {
	 int arrayBidimensional [][]  = new int [4][4];
	 int sumaDiagonal = 0;
	 for(int i = 0 ; i < 4 ; i ++ ) {
		 System.out.println("");
		 for(int j = 0 ; j < 4 ; j ++ ) {
			 arrayBidimensional [i][j]=(int)(Math.random()*10+1);
			 if(i==j) {
				 sumaDiagonal+=i;
			 }
		 }
	 }
	 System.out.println("La suma de la diagonal principal es "+sumaDiagonal);
}
} 
